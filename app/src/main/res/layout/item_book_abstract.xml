<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_abstract"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/image_book_cover"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        tools:src="@drawable/ic_book_black_36dp"
        />

    <TextView
        android:id="@+id/text_book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_book_cover"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="?android:textColorPrimary"
        tools:text="禅与摩托车维修艺术"
        />

    <TextView
        android:id="@+id/text_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_book_cover"
        android:layout_below="@id/text_book_title"
        android:layout_marginTop="3dp"
        android:textAppearance="?android:textAppearanceSmall"
        tools:text="罗伯特.波西格"
        />

    <TextView
        android:id="@+id/text_book_press"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_book_author"
        android:layout_toRightOf="@id/image_book_cover"
        android:layout_marginTop="3dp"
        android:textAppearance="?android:textAppearanceSmall"
        tools:text="重庆出版社"
        />

</RelativeLayout>
